{
  "name": "@jerrythomas/dbd",
  "version": "1.0.1",
  "description": "Deploy databases using DDL scripts.",
  "private": false,
  "bin": "src/index.js",
  "main": "src/index.js",
  "module": "src/index.js",
  "scripts": {
    "start": "src/index.js",
    "pg-test": "pg-test start",
    "test:nopg": "uvu spec",
    "test": "pnpm pg-test && uvu spec",
    "release": "release-it --preRelease=beta",
    "coverage": "pnpm pg-test && c8 --include=src uvu spec",
    "coverage:lcov": "pnpm pg-test && c8 --reporter=lcov --include=src uvu spec "
  },
  "author": "Jerry Thomas <me@jerrythomas.name>",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@databases/pg": "^5.3.0",
    "csvtojson": "^2.0.10",
    "js-yaml": "^4.1.0",
    "ramda": "^0.28.0",
    "sade": "^1.7.4"
  },
  "devDependencies": {
    "@databases/pg-test": "^3.1.1",
    "@vanillaes/mock-console": "^3.0.0",
    "c8": "^7.10.0",
    "release-it": "^14.11.8",
    "rimraf": "^3.0.2",
    "uvu": "^0.5.2"
  }
}
